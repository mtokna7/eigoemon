<div class="flex justify-center items-center mt-28">
  <p class="text-4xl font-rocknroll break-words mr-5"><%= t('main.library_announcement') %></p>
  <div data-controller="autocomplete" data-autocomplete-url-value="<%= autocomplete_words_path %>" role="combobox" class="text-lg relative">
    <input type="text" data-autocomplete-target="input" class="border rounded" autofocus placeholder="<%= t('placeholder.search') %>">
    <input type="hidden" name="word_id" data-autocomplete-target="hidden"/>
    <ul class="list-group absolute z-10 mt-2 bg-white border rounded shadow-lg" data-autocomplete-target="results"></ul>
  </div>
</div>

<p class="mx-auto text-2xl text-center font-yusei break-words text-rose-900 mt-3">â€» <%= t('main.sound_notice')%></p>

