<h1 class="font-bold mt-5 text-6xl text-center pb-5 font-yusei"><%= t('question.title') %></h1>
<p class="mx-auto text-4xl text-center font-rocknroll break-words"><%= t('question.which_is_correct?') %></p>
<p class="mx-auto text-2xl text-center font-yusei break-words text-rose-900 mt-3">â€» <%= t('main.sound_notice') %></p>
<p class="font-rowdies mx-auto text-8xl text-center mt-8 py-10"><%= quiz.word.name %></p>

<div class="flex flex-col justify-center pb-20 items-center">
  <div class="flex flex-col md:flex-row justify-center items-center">
    <% quiz_choices.shuffle.each_with_index do |choice, index| %>
      <% bg_color = index == 0 ? 'bg-blue-600 hover:bg-blue-400' : 'bg-green-700 hover:bg-green-400' %>
      <% link_classes = "w-124 h-48 p-6 mx-6 my-2 #{bg_color} rounded shadow-md text-5xl text-center font-yusei flex items-center justify-center mt-10 text-gray-700" %>
      <%= link_to send(explanation_path, id: quiz.word.id, choice_id: choice.id), method: :get do %>
        <%= content_tag :div, class: link_classes do %>
          <% parts = choice.parts %>
          <%= parts[:first_part] %>
          <% if parts[:bold_part] %>
            <strong class="text-black"><%= parts[:bold_part] %></strong>
          <% end %>
          <%= parts[:last_part] %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
