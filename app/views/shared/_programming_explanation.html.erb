<div class="w-full lg:w-1/2 mx-auto lg:mx-0">
  <div class="rounded shadow-md lg:text-left bg-green-900 text-white lg:ml-10 ml-2 lg:w-40 w-24 lg:py-3 py-1 lg:mt-16 mt-8">
    <p class="font-rocknroll lg:text-3xl text-lg lg:ml-10 ml-5"><%= t('main.answer') %></p>
  </div>
  <div class="font-yusei lg:text-5xl text-3xl lg:text-left text-center lg:ml-28 ml-2 lg:mt-10 mt-8 text-gray-700">
    <% parts = word.parts %>
    <%= parts[:first_part] %>
    <% if parts[:bold_part] %>
      <strong class="text-black"><%= parts[:bold_part] %></strong>
    <% end %>
    <%= parts[:last_part] %>
  </div>
  <p class="font-rowdies mx-auto lg:text-8xl text-5xl lg:text-left text-center lg:ml-28 ml-2"><%= word.name %></p>
  <div class="rounded shadow-md lg:text-left text-center bg-green-900 text-white lg:py-3 py-1 lg:w-96 w-56 lg:mt-14 mt-7 lg:ml-10 ml-2">
    <p class="font-rocknroll lg:text-3xl text-lg lg:ml-10 ml-5"><%= t('main.programming_explanation') %></p>
  </div>
  <p class="font-yusei lg:text-2xl lg:ml-10 ml-2 break-words lg:mt-10 mt-5"><%= word.programming_explanation %></p>
</div>