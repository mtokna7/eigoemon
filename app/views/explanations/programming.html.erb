<%= javascript_include_tag 'youglish' %>
<%=render 'shared/result', is_correct: @user_quiz_history.is_correct %>

<div class="flex flex-col lg:flex-row items-center lg:justify-between">
  <!-- グループ1 -->
  <%= render 'shared/programming_explanation', word:@word %>
  <!-- グループ2 -->
  <%= render 'shared/youglish', word:@word %>
